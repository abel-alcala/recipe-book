{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://recipe-book-t01m.onrender.com/api/$1"
    },
    {
      "src": "/auth/(.*)",
      "dest": "https://recipe-book-t01m.onrender.com/auth/$1"
    },
    {
      "src": "/login",
      "dest": "/login.html"
    },
    {
      "src": "/register",
      "dest": "/register.html"
    },
    {
      "src": "/((?!.*\\.(js|css|png|jpg|jpeg|svg|webp|woff|woff2|ttf|eot|ico|json)$).*)",
      "dest": "/index.html"
    }
  ]
}